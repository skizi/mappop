
<section class="main_menu">
	<ul>
		<li><%= link_to "トップページ", :controller => "home", :action => "index" %></li>
		<li><%= link_to "MapPopをみる", :controller => "questions", :action => "index" %></li>

		<% if logged_in? %>
			<li><a href="/users/<%= session[:user_id] %>">マイページ</a></li>
		<% else %>
			<li><%= link_to "ログイン", login_path, method: :new %></li>
		<% end %>

		<% if logged_in? %>
			<li class="logout_btn">
				<%= link_to "ログアウト", logout_path, method: :delete %></li>
		<% else %>
			<li class="signup_btn"><%= link_to "新規登録", :controller => "users", :action => "new" %></li>
		<% end %>
		<li class="close_btn">
			<a href="javascript:void(0);" class="close_btn">閉じる</a>
		</li>
	</ul>
</section>