	<ul>
	<% flash.each do |key, value| %>
	  <li class="alert alert-<%= key %>">
	    <%= value %>
	  </li>
	<% end %>
	</ul>
	
    <%= form_for(:session, url: login_path) do |f| %>
		<div class="c_mb40 email">
			<%= f.label :email %>
			<%= f.text_field :email %>
		</div>
		<div class="c_mb40 password">
			<%= f.label :password %>
			<%= f.password_field :password %>
		</div>

		<%= hidden_field_tag :referer, flash[:referer] %>
		<%= f.submit "Log in", class:"submit_btn0 c_mcenter" %>

	<% end %>

	<p><%= link_to "新規登録", signup_path %></p>