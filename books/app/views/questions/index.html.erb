<% content_for :js_css_include do %>
	<script>
		var app = {};
		function initMap(){
		  app.initMap();
		}
	</script>
	<%= javascript_include_tag 'Questions', media:'all', 'data-turbolinks-track': 'reload' %>
	<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBbL29XjQJ8Qrovfqi_xDRJz88MbmSBREQ&callback=initMap"
	    async defer></script>
<% end %>

<div class="map_container">
	<div class="map"></div>
	<a href="javascript:void(0);" class="btn0">質問を投稿</a>
</div>


<div class="modal new">
	<div class="bg"></div>
	<div class="inner">
		<div class="c_mb30">
			<label for="question_title">タイトル</label>
			<input type="text" name="title" class="title">
		</div>
		<div class="c_mb30">
			<label for="question_content">内容</label>
			<textarea name="content" class="content"></textarea>
		</div>

		<label for="question_user_id">User</label>
		<input type="text" class="c_mb30" name="user_id" id="question_user_id">

		<input type="submit" name="commit" value="Create Question" class="btn0 submit_btn c_mcenter" data-disable-with="Create Question">

		<a href="javascript:void(0);" class="close_btn">×</a>
	</div>
</div>


<div class="modal show">
	<div class="bg"></div>
	<div class="inner">
		<div class="top">
			<h2 class="title"></h2>
			<p class="content"></p>
		</div>
		<div class="bottom">
			<h2>コメント一覧</h2>
			<ul class="comments">
				<li></li>
			</ul>
			<textarea name="comment" class="comment"></textarea>
			<a href="javascript:void(0);" class="btn0 answer_btn c_mb30">コメントする</a>
		</div>

		<a href="javascript:void(0);" class="close_btn">×</a>
	</div>
</div>