<div class="map_container">
	<div class="map" id="leafletMap"></div>
	<a href="javascript:void(0);" class="btn0">質問を投稿する</a>
</div>


<div class="modal new">
	<div class="inner">
		<h2 class="title0">新規投稿</h2>
		<div class="c_mb30 title">
			<label for="questionTitle">タイトル</label>
			<input type="text" name="title" class="title" id="questionTitle">
		</div>
		<div class="c_mb30 textarea">
			<label for="questionContent">投稿内容</label>
			<textarea name="content" class="content" id="questionContent"></textarea>
		</div>
		<div class="c_mb40 photo">
			<div class="file_selector">
				<label class="file" for="fileContent">
					<p>写真選択</p>
					<input type="file" id="fileContent">
				</label>
				<div class="photo">
					<div class="delete_btn"></div>
				</div>
			</div>
		</div>

		<input type="submit" name="commit" value="投稿する" class="btn0 submit_btn c_mcenter" data-disable-with="Create Question">

		<a href="javascript:void(0);" class="close_btn">×</a>
	</div>
</div>


<div class="modal show">
	<div class="inner">
		<div class="top">
			<h2 class="title">
				<div class="like_btn">
					<span class="count">0</span>
					<span class="like_btn_text">いいね</span>
					<span class="like_popup">タップでいいねする</span>
				</div>
				<span class="title_user_icon">
					<a href="#"></a>
				</span>
				<span class="title_text"></span>
			</h2>
			<div class="photo"></div>
			<p class="content"></p>
		</div>
		<div class="bottom">
			<div>
				<h2>コメント一覧</h2>
				<ul class="comments">
				</ul>
				<textarea name="comment" class="comment"></textarea>
				<a href="javascript:void(0);" class="btn0 answer_btn c_mb30">コメントする</a>
			</div>
		</div>

		<a href="javascript:void(0);" class="close_btn">×</a>
	</div>
</div>